<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizFc.Components.Navbar">
    <VerticalStackLayout>
        <Grid HeightRequest="80">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#131313" Offset="0.0" />
                    <GradientStop Color="#101E11" Offset="0.68" />
                    <GradientStop Color="#0C2A0E" Offset="0.94" />
                </LinearGradientBrush>
            </Grid.Background>

            <Image Source="quiz_fc_logo.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HeightRequest="60">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LogoOnClick" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <BoxView HeightRequest="3"
                 Color="#008c09"
                 HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentView>
